{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "main": "./bin/www",
  "type": "module",
  "scripts": {
    "start": "nodemon ./bin/www",
    "test": "cross-env NODE_ENV=test jest"
  },
  "dependencies": {
    "bcrypt": "^3.0.7",
    "cors": "^2.8.5",
    "cross-env": "^6.0.3",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "helmet": "^3.21.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.8.0",
    "morgan": "~1.9.1",
    "nodemon": "^2.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "@babel/preset-env": "^7.7.6",
    "babel-plugin-transform-default-import": "^1.0.0",
    "jest": "^24.9.0",
    "supertest": "^4.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testPathIgnorePatterns": [
      "/tests/utils",
      "/tests/setup.js"
    ],
    "setupFilesAfterEnv": ["<rootDir>/src/tests/setup.js"],
    "testMatch": [ "**/tests/**/*.[jt]s?(x)", "**/?(*.)+(spec|test).[jt]s?(x)" ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": ["transform-default-import"]
  }
}
